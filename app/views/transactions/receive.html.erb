<h1>Receive Mail</h1>

  <hr>
  <br>
<% if current_user.blank? %>
  <div class="span4 left hidden-phone">
    <%= image_tag("mascot.jpg", :max_width => "200")%>
  </div>
<% end%>

<%= simple_form_for @transaction, :url => receive_transactions_url,  :html => {:method => :get, :class => "form-vertical left"} do |f| %>

    <div id="receiver_mobile">
      <%= f.input :receiver_mobile, :label => 'Receiver Mobile', :placeholder => '98xxxxxx00', :input_html => {:class => "left"}%>
    </div>
    <div id="receiver_email" style="display:none">
      <%= f.input :receiver_email, :label => 'Receiver Email', :id => "receiver_email", :placeholder => 'user@domain.com', :input_html => {:class => "left"}%>
    </div>
    
    <div class="left" style="margin: -5px 0 0 20px;">
      <button id="mobile_toggle" type="button" class="btn btn-warning" data-complete-text="Email" data-toggle="button">Email</button>
    </div>
    
    <div class="clear"></div>
    <div id="document_secret">
      <%= f.input :document_secret, :label => 'Secret Code' %>
    </div>
  
    <%= f.button :submit, "Receive Mail", :class => "btn-large btn-primary" %>
  
<% end %>

