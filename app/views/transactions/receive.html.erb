<h1>Receive Mail</h1>

  <hr>
  <br>
<div class="span4 left">
  <%= image_tag("mascot.jpg", :max_width => "200")%>
</div>

<%= form_for(@transaction, :url => receive_transactions_path,  :html => {:method => :get, :class => "form-vertical left"}) do |f| %>
  <% if @transaction.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@transaction.errors.count, "error") %> prohibited to retrieve Document</h2>

      <ul>
      <% @transaction.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  
  <div>
    <div class="control-group" id="receiver_mobile">
      <%= f.label :receiver_mobile, :class => 'control-label' %>
      <div class="controls left">
        <%= f.text_field :receiver_mobile, :class => 'text_field', :placeholder => '98xxxxxx00' %>
      </div>
    </div>
  
    <div class="control-group" id="receiver_email" style="display:none;">
      <%= f.label :receiver_email, :class => 'control-label' %>
      <div class="controls left">
        <%= f.text_field :receiver_email, :class => 'text_field', :placeholder => 'user@domain.com' %>
      </div>
    </div>
  
    <div class="right" style="">
      <button id="mobile_toggle" type="button" class="btn btn-warning" data-complete-text="Email" data-toggle="button">Email</button>
    </div>
  </div>
  <div class="clear"></div>
  
  <div class="control-group">
    <%= f.label :document_secret, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :document_secret, :class => 'text_field', :maxlength => 6 %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Receive Mail", :class => "btn-large btn-primary" %>
  </div>
<% end %>

