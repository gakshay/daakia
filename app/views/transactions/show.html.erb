<%- model_class = Transaction -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:document_id) %>:</strong></dt>
  <dd><%= @transaction.document_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:document_secret) %>:</strong></dt>
  <dd><%= @transaction.document_secret %></dd>
  
  <dt><strong><%= model_class.human_attribute_name(:sender_mobile) %>:</strong></dt>
  <dd><%= @transaction.sender_mobile %></dd>
  
  <dt><strong><%= model_class.human_attribute_name(:receiver_mobile) %>:</strong></dt>
  <dd><%= @transaction.receiver_mobile %></dd>
  <dt><strong><%= model_class.human_attribute_name(:receiver_email) %>:</strong></dt>
  <dd><%= @transaction.receiver_email %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              transactions_path, :class => 'btn'  %>
  <%#= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_transaction_path(@transaction), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              transaction_path(@transaction),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
  <%= link_to "Download", download_transaction_path(@transaction), :method => :post, :class => "btn" %>
</div>
